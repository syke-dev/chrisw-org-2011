---
import BaseLayout from '@layouts/BaseLayout.astro';
import { default as Image, Fit } from '@components/Image.astro';
import ProjectNavigation from '@components/ProjectNavigation.astro';
---

<BaseLayout title='Blind Man' header_image='/blindman/Logo.jpg'>

	<Fragment slot="header_image">
		<Image src='/blindman/logo.jpg' width={800} height={100} />
	</Fragment>

	<Fragment slot="base_body">

		<slot name="body" />

		<ProjectNavigation links={[
			['/blindman', 'Home'],
			['/blindman/info', 'Info']
		]} />

	</Fragment>

</BaseLayout>