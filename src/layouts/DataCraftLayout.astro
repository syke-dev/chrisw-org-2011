---
import BaseLayout from '@layouts/BaseLayout.astro';
import { default as Image, Fit } from '@components/Image.astro';
import ProjectNavigation from '@components/ProjectNavigation.astro';
---

<BaseLayout title='Datacraft'>

	<Fragment slot="header_image">
		<Image src='/datacraft/banner.jpg' width={800} height={100} />
	</Fragment>

	<Fragment slot="base_body">

		<slot name="body" />

		<ProjectNavigation links={[
			['/datacraft', 'Home'],
			['/datacraft/info', 'Info'],
			['/datacraft/stats', 'Stats'],
			['/datacraft/download', 'Download'],
		]} />

	</Fragment>

</BaseLayout>