---
import BaseLayout from '@layouts/BaseLayout.astro';
import { default as Image, Fit } from '@components/Image.astro';
import ProjectNavigation from '@components/ProjectNavigation.astro';
---

<BaseLayout title='Watt Bodies'>

	<Fragment slot="header_image">
		<Image src='/wattbodies/logo.png' width={800} height={100} />
	</Fragment>

	<Fragment slot="base_body">

		<slot name="body" />

		<ProjectNavigation links={[
			['/wattbodies', 'Home'],
			['/wattbodies/info', 'Info'],
			['/wattbodies/media', 'Media'],
			['/wattbodies/download', 'Download']
		]} />

	</Fragment>

</BaseLayout>